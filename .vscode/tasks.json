{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "${file}",
        "-o",
        "${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "run",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "./${fileBasenameNoExtension} < input.txt > output.txt"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "dependsOn": ["compile"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}

